    main(class="grow rounded-md  lg:mt-24 mt-6" )


        div(class=" py-9 px-[16px] bg-white " ) 
            h3(class="font-bold text-[2rem]  mb-6") refunds
            -for(let i=0;i<3;i++)
                a(href="./refund-details.html" class="flex  mt-4 gap-6 py-1 px-2 relative border rounded-md")
                    div(class=" sm:h-[150px] h-[120px]  aspect-square" )
                        img( onerror="this.onerror=null;this.src='../assets/logo.jpg';" class="w-full h-full" data-src="../assets/box2.png")
                    div(class=" sm:space-y-4 space-y-2  text-base font-medium mt-4 py-1  relative ")
                        div(class="flex") 
                            span Refund Code:
                            span #33333
                        div(class="flex text-sm") 
                            span status:
                            span cancelled
                        div(class="flex text-sm") 

                            span 2023-12-13 14:45 PM

