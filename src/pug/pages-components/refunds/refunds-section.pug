    form(class="fixed inset-0  bg-secondary/30 z-[50] hidden " :class="{'cent' : image}" x-show="image" )
        div(class=" w-[25%] py-8 px-[1%] min-w-[300px] shadow bg-white rounded-md z-[50]"  x-show="image" @click.away="image=false")
            h3(class="mb-6 text-center font-medium text-xl") choose image

            div.cent.mt-8
                button(type="submit" class="py-2 px-6 text-center bg-secondary rounded-full text-white  w-fit font-medium text-sm tracking-wider  uppercase") submit








