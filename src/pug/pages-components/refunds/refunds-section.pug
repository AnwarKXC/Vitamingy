div(class="flex gap-[5%] container maxsm:flex-col capitalize" x-data="{image:false}")
    //- div(class="inset-0 fixed z-40 bg-black/10 ")
    side(class="lg:w-[340px] sm:w-[222px] w-full  " )
        div(class="flex flex-col w-full px-[16px] maxlg:pt-6  mt-6 shadow rounded-md lg:mt-24  relative")
            div(class="cent")
                div(class="rounded-full border-[4px] z-[30] border-primary aspect-square w-[40%] min-w-[100px] maxsm:text-center  lg:absolute top-[0px]  lg:-translate-y-20" )
                    img( onerror="this.onerror=null;this.src='../assets/logo.jpg';" class="w-full aspect-square rounded-full" data-src="../assets/img-user.jpg" @click="image=true")

            div(class="flex flex-col gap-2 py-2  relative border-b-2  border-secondary lg:mt-24" )
                a(href="./profile.html" class="text-start") User Name 
                span(class="") vitamingy@gmail.com 
            h3(class="mt-4 font-medium text-xl") setting
            div(class="flex flex-col gap-2 py-2  relative divide-y-[1px] border-b-2  border-secondary px-2")
                div(class="cif gap-2 py-2  relative " x-data="{language:false}")
                    div(class="cif gap-2   relative ")
                        span(class="fa fa-globe info") 
                        span(class="") country
                    
                    div(class="cent gap-2  hover:text-black relative"  @click="language=true" @click.away="language=false")
                        span(class="cursor-pointer" ) egypt
                        <i class="fa-solid fa-sort-down text-xs mb-1"></i>
                        div(class="absolute w-32 leading-8 p-4 ltr:left-0 rtl:right-0 text-zinc-500 top-[20px] border rounded-md z-50 bg-white  hidden" :class="{'!block':language}" x-show="language")
                            div
                                button() egypt
                            div
                                button() libia
                div(class="cif gap-4 py-2  relative " x-data="{language:false}" @mouseover.away="language=false")
                    div(class="cif gap-2   relative ")
                        span(class="fa-solid fa-language") 
                        span(class="") language 
                    div(class="cent gap-2  hover:text-black relative "  @click="language=true" @click.away="language=false")
                        span(class="cursor-pointer" x-text="lang") 
                        <i class="fa-solid fa-sort-down text-xs mb-1"></i>
                        div(class="absolute w-32 leading-8 p-4 ltr:left-0 rtl:right-0 text-zinc-500 top-[20px] border rounded-md z-50 bg-white  hidden" :class="{'!block':language}" x-show="language")
                            div
                                button(@click="setToRTL()") Arabic
                            div
                                button(@click="setToLTR()") English
            div(class="flex flex-col gap-2 py-1 mt-3 relative divide-y-[1px]")
                a(href="./wishlist.html" class="cif gap-2 py-2  relative ")
                    span(class="fa fa-heart info") 
                    span(class="") favorite
                a(href="./orders.html" class="cif gap-2 py-2  relative " )
                    span(class="fa-solid fa-truck") 
                    span(class="") orders
                a(href="./refunds.html" class="cif gap-2 py-2  relative " )
                    span(class="fa-solid fa-truck") 
                    span(class="") refunds
                a(href="./bag.html" class="cif gap-2 py-2  relative ")
                    span(class="fa fa-shopping-basket info") 
                    span(class="") bag
                a(href="./contact-us.html" class="cif gap-2 py-2  relative ")
                    span(class="fa fa-info-circle info") 
                    span(class="") help
            button(class="cif gap-2 py-2  relative " )
                i( class="fa-solid fa-right-from-bracket")
                span(class="font-bold text-[1rem]") log out


            //- button(class="cif gap-2 py-2  relative " @click="toggleDirLang()")
