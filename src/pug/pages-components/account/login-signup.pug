section( x-data="{sign:'log',init2:true,full:true,mobileC:false}"  x-init="() => { setTimeout(() => full = false, 500)}" @load.window="width = (window.innerWidth > 0) ? window.innerWidth : screen.width;if (width <= 1023) { mobileC=true}")
	div(class="lg:flex-row flex-col items-start justify-center flex overflow-hidden  mb-16 relative lg:min-h-screen")
		div(class=" lg:absolute  maxlg:h-fit top-0 maxlg:!w-full h-full  w-screen  z-20  -translate-x-[50%] " id="Animation" )
			div(class="flex flex-col  gap-4 ltr:pl-[50%] w-full  lg:py-10 py-5 h-full bg-secondary text-white rounded-b-full "  :class="{ 'ltr:pl-[50%] rtl:pr-[50%]  ': sign=='log', 'ltr:pr-[50%] rtl:pl-[50%]  ':sign=='sign' }")
