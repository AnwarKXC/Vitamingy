//product card
div(   x-data="{open:false,isHovered: false }" @mouseover="open=true;isHovered=true" @mouseover.away="open=false;isHovered=false"  class=" delay-1000  duration-1000 sm:min-w-[200px] w-full p-2 sm:p-0") 
	div(class="py-5  overflow-hidden relative" )
		
		div(  class="sm:min-w-[200px] w-full aspect-square bg-[#F7F7F7] overflow-hidden rounded-md" )
			//swap the image on hover
			a( href="product.html" class=" w-full aspect-square bg-[#F7F7F7] overflow-hidden rounded-md" )
				img( onerror="this.onerror=null;this.src='../assets/logo.jpg';"   :data-src="isHovered ? '../assets/17-img-1.png' : '../assets/17-img-2.png'", alt="" , class=" delay-300 rounded-md duration-300 aspect-square w-full overflow-hidden  hover:scale-110  ease-in-out  smoothing-smooth")
			div(class="absolute maxlg:hidden px-2 py-0.5 text-sm text-white font-semibold  rounded-lg bg-primary top-10 right-2  " x-show="!open") -4%
			div(class="absolute maxlg:hidden text-sm px-2 py-0.5 text-white font-semibold rounded-lg bg-red-600 top-10 right-14  " x-show="!open") HOT

			div( class="cursor-pointer absolute w-10 h-10 rounded-full maxlg:hidden leading-8 p-4  top-[40px]  cent  ltr:right-2 rtl:left-2 " x-show="open" x-data="{heart:false}" @click="heart=!heart;wishlist=true"  :class="{ 'text-white bg-primary hover:text-secondary border border-primary hover:border-none  hover:bg-white' : heart  , 'hover:text-white hover:bg-primary  hover:border border-primary  text-secondary  bg-white' :!heart}"     x-transition:enter=" transform transition-transform ease-in duration-300"  x-transition:leave="ltr:translate-x-16 rtl:-translate-x-16 duration-500"  )
				<i class="fa-solid fa-heart "></i>
			div( class="cursor-pointer absolute w-8 h-8 rounded-b-md  lg:hidden leading-8 p-2  top-5 cent  rtl:right-4 ltr:right-0 shadow "  x-data="{heart:false}" @click="heart=!heart;wishlist=true"  :class="{ 'bg-white text-primary ' : heart  , ' text-secondary  bg-white' :!heart}"      )
				<i class="fa-solid fa-heart "></i>
			
			div( @click="showDetails=true" class="cursor-pointer text-secondary maxlg:hidden absolute w-10 h-10 rounded-full leading-8 p-4  top-[100px]   cent hover:text-white hover:bg-primary cent hover:border border-primary   bg-white ltr:right-2 rtl:left-2 " x-show="open" x-transition:enter=" transform transition-transform ease-in duration-300 "  x-transition:leave="ltr:translate-x-16 rtl:-translate-x-16 duration-500 delay-300")
				<i class="fa-regular fa-eye "></i>
			

			div( @click="compare=true" class="cursor-pointer absolute w-10 h-10 rounded-full maxlg:hidden leading-8 p-4  top-[160px]   cent   hover:text-white hover:bg-primary cent hover:border border-primary   bg-white ltr:right-2 rtl:left-2 text-secondary " x-show="open" x-transition:enter="  transform transition-transform ease-in duration-300"  x-transition:leave="ltr:translate-x-16 rtl:-translate-x-16 duration-300 delay-500")
				<i class="fa-solid fa-code-compare "></i>
			

			div(@click="wishlist=true" class=" cursor-pointer maxlg:hidden absolute w-12 h-12 rounded-full leading-8 p-4  bottom-8 bg-secondary text-white hover:text-secondary   hover:bg-white cent hover:border border-secondary   ltr:right-2 rtl:left-2 " x-show="open" x-transition.duration.300ms   x-transition:enter.scale.0  x-transition:leave.scale.0  )
				<i class="fa-solid fa-cart-shopping"></i>


		div(class="md:flex justify-between my-3")
			div(@click="wishlist=true" class="lg:hidden cursor-pointer absolute w-6 h-6 rounded-full leading-8 p-1  bottom-8 bg-secondary text-white hover:text-secondary   hover:bg-white cent hover:border border-secondary   ltr:right-2 rtl:left-2 "   )
				<i class="fa-solid fa-cart-shopping  text-xs"></i>
